<p id="notice"><%= notice %></p>

<h1>Listing Competitors</h1>

<table>
  <thead>
    <tr>
      <th>Asin</th>
      <th>Condition</th>
      <th>Lowest price</th>
      <th>Buybox price</th>
      <th>Lowest fba price</th>
      <th>Has amazon</th>
      <th>Number of offers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competitors.each do |competitor| %>
      <tr>
        <td><%= competitor.asin %></td>
        <td><%= competitor.condition %></td>
        <td><%= competitor.lowest_price %></td>
        <td><%= competitor.buybox_price %></td>
        <td><%= competitor.lowest_fba_price %></td>
        <td><%= competitor.has_amazon %></td>
        <td><%= competitor.number_of_offers %></td>
        <td><%= link_to 'Show', competitor %></td>
        <td><%= link_to 'Edit', edit_competitor_path(competitor) %></td>
        <td><%= link_to 'Destroy', competitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

