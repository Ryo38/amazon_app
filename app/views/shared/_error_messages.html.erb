<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-warning">
			<h4>Sorry, the form you entered contains the following errors. Please enter the correct information again.</h4>
			<% pluralize(@user.errors.count,"error") %>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
	